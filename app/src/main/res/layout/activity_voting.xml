<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotingActivity"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="800dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/voting_results"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ongoing_voting"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <ImageView
        android:id="@+id/v3"
        android:layout_width="140dp"
        android:layout_height="95dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="-385dp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vote_button" />

    <ImageView
        android:id="@+id/v4"
        android:layout_width="140dp"
        android:layout_height="95dp"
        android:layout_marginTop="-185dp"
        android:layout_marginEnd="-385dp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:srcCompat="@drawable/vote_button" />

    <ImageView
        android:id="@+id/v2"
        android:layout_width="140dp"
        android:layout_height="95dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="-385dp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vote_button" />

    <ImageView
        android:id="@+id/v1"
        android:layout_width="140dp"
        android:layout_height="95dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="-385dp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vote_button" />


</androidx.constraintlayout.widget.ConstraintLayout>